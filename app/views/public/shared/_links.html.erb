<div class= "text-center m-4">
  <%- if controller_name != 'sessions' %>
    <h6 class="m-0">既に会員登録をしている方はこちら</h6><br>
    <%= link_to "ログイン", new_session_path(resource_name), class: 'btn-block btn-dark btn-lg d-inline text-decoration-none' %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <h6 class="m-0">会員登録がまだの方はこちら</h6><br>
    <%= link_to "新規会員登録", new_registration_path(resource_name), class: 'btn-block btn-dark btn-lg d-inline text-decoration-none' %>
  <% end %>
</div>
