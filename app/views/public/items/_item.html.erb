<% items.each do |item| %>
<div class="items">
  <div class="item-image">
    <%= image_tag item.get_image(200, 200) %>
  </div>
  <div class="item-info">
    <p><%= item.brand %></p>
    <h6 class="item-name"><%= link_to item.name, item_path(item.id), class: "item-name" %></h6>
    <p>
      総評価：<%= item.avg_reviews %>
      <% if item.reviews.any? %>
        (口コミ<%= item.reviews.count %>件)
      <% end %>
    </p>
    <p>カテゴリー：<%= item.genre.name %></p>
    <p>参考価格：<%= item.price %>円／<%= item.capacity %>
    <p>発売日：<%= item.release_date.strftime('%Y/%m/%d') %></p>
  </div>
</div>
<% end %>