<div class="all-view">
  <div class="title">
    <h2><span class="show-brand"><%= @item.brand %></span>　<%= @item.name %></h2>
  </div>
  <div class="item-show">
    <div class="item-image">
      <%= image_tag @item.get_image(300, 300) %>
    </div>
    <div class="item-introduction">
      <div class="item-info">
        <p>口コミ総評価：<span class="total-rating-value"><%= @item.avg_reviews %></span>
          <% if @reviews.any? %>
            (口コミ<%= @reviews.count %>件)
          <% end %>
        </p>
        <p>ジャンル：<%= @item.genre.name %></p>
        <p>税込価格(税抜価格)：<%= @item.add_tax_price %>(<%= @item.price.to_s(:delimited) %>)／<%= @item.capacity %>　発売日：<%= @item.release_date.strftime('%Y/%m/%d') %></p>
        <p class="mb-0">商品説明：</p>
        <p><%= @item.introduction %></p>
      </div>
      <div class="icon">
        <% if user_signed_in? %>
          <div id="favorite-btn-<%= @item.id %>">
            <%= render 'public/favorites/favorite', item: @item %>
          </div>
          <%= link_to new_item_review_path(@item) do %>
            <i class="fa-regular fa-comment fa-2x ml-5"></i>口コミする
          <% end %>
        <% end %>
      </div>
    </div>
   </div>
  <div class="review">
    <h4 class="subtitle">COSMENクチコミ評価</h4>
  </div>
  <div class="rate">
    <div class="chart">
      <%= render 'chart', item: @item %>
    </div>
    <div　class="rate-avg">
      <% if @reviews.any? %>
        <p>シワ改善：<%= @item.avg_wrinkle %></p>
        <p>美白：<%= @item.avg_whitening %></p>
        <p>保湿：<%= @item.avg_moisturizing %></p>
        <p>ニキビケア：<%= @item.avg_acne_cure %></p>
        <p>安全性：<%= @item.avg_no_irritation %></p>
      <% else %>
        <p>シワ改善：未評価</p>
        <p>美白：未評価</p>
        <p>保湿：未評価</p>
        <p>ニキビケア：未評価</p>
        <p>安全性：未評価</p>
      <% end %>
    </div>
  </div>
  <div class="review">
    <h4 class="subtitle">最新のクチコミ</h4>
    <div class="review-index">
      <% if @reviews.any? %>
        <% @reviews.each do |review| %>
          <div class="review-show">
            <p><%= review.user.age_i18n %>／<%= review.user.sex_i18n %>／<%= review.user.skin_type_i18n %></p>
            <p>投稿日時：<%= review.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
            <table class="mb-3">
              <tr>
                <td>美白効果：<%= review.whitening %></td>
              </tr>
              <tr>
                <td>シワ改善効果：<%= review.wrinkle %></td>
              </tr>
              <tr>
                <td>保湿効果：<%= review.moisturizing %></td>
              </tr>
              <tr>
                <td>ニキビ改善効果：<%= review.acne_cure %></td>
              </tr>
              <tr>
                <td>刺激の無さ：<%= review.no_irritation %></td>
              </tr>
            </table>
                <p class="mb-0"><%= review.comment %></p>
          </div>
        <% end %>
      <% else %>
        <p>レビューはありません</p>
      <% end %>
    </div>
  </div>
</div>