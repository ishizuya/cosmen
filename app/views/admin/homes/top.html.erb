<div class="all-view">
  <div class="title">
    <h2>ユーザー一覧</h2>
  </div>
  <p>管理者：石津谷 拓磨</p>
  <div>
    <table class="user-table">
      <tr class="user-head">
        <th class="user-no">ユーザーNo.</td>
        <th class="user-name">ユーザーネーム</td>
        <th class="user-status">ユーザーステータス</td>
      </tr>
      <% @user.each do |user| %>
        <tr class="user-record">
          <td><%= user.id %></td>
          <td><%= link_to user.name, edit_admin_user_path(user.id) %></td>
          <td>
            <% if user.is_deleted == false %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>