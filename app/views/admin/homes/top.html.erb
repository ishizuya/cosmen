<div class="all-view">
  <div class="title">
    <h2>ユーザー一覧</h2>
  </div>
  <p class="text-right">管理者：石津谷 拓磨</p>
  <div>
    <table class="table">
      <tr class="record">
        <th class="user-id">ユーザーID</td>
        <th class="user-name">ユーザーネーム</td>
        <th class="user-age">年齢</td>
        <th class="user-sex">性別</td>
        <th class="user-status">会員ステータス</td>
        <th></th>
      </tr>
      <% @user.each do |user| %>
        <tr class="record">
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.age_i18n %></td>
          <td><%= user.sex_i18n %></td>
          <td>
            <% if user.is_deleted == false %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
          <td>
            <%= link_to "編集", edit_admin_user_path(user.id), class:"btn btn-dark btn-sm m-1" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>