<h1>レビュー履歴一覧</h1>
  <% @reviews.each do |review| %>
    <div>
      <p><%= link_to review.item.name, admin_item_path(review.item_id) %></p>
      <p>ユーザーネーム：<%= link_to review.user.name,  edit_admin_user_path(review.user_id) %></p>
      <p>投稿日時：<%= review.created_at.strftime('%Y/%m/%d') %></p>
      <%= link_to "詳細", admin_review_path(review.id) %>
      <%= link_to "削除", admin_review_path(review.id), method: :delete, data: {confirm: "削除しますか？"}  %>
    </div>
  <% end %>
