<h1>商品情報編集</h1>
  <%= form_with model: @item, url:admin_item_path(@item.id),local:true do |f| %>
    <p>
      <label for="inputImage" >商品画像</label>
      <div id="new-image"></div>
      <%= f.file_field :image, accept: "image/*" %>
    </p>
    <p>
      <label for="inputBrand" >ブランド</label>
      <%= f.text_field :brand, autofocus: true %>
    </p>
    <p>
      <label for="inputName" >商品名</label>
      <%= f.text_field :name %>
    </p>
    <p>
      <label for="inputGenre_id" >ジャンル</label>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, selected: @item.genre_id), id:"inputGenre_id" %>
    </p>
    <p>
      <label for="inputPrice" class="col-3">税抜価格</label>
      <%= f.text_field :price %>円
    </p>
    <p>
      <label for="inputCapacity" class="col-3">容量</label>
      <%= f.text_field :capacity %>
    </p>
    <p>
      <label for="inputIntroduction" class="col-3">商品説明</label>
      <%= f.text_area :introduction, autofocus: true %>
    </p>
    <div>
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    </div>
  <% end %>