<div class="all-view">
  <div class="title">
    <h2><span class="show-brand"><%= @item.brand %></span>　<%= @item.name %></h2>
  </div>
  <div class="item-show">
    <div class="item-image">
      <%= image_tag @item.get_image(300, 300) %>
    </div>
    <div class="item-introduction">
      <div class="item-info">
        <p>ジャンル：<%= @item.genre.name %></p>
        <p>税込価格(税抜価格)：<%= @item.add_tax_price %>円(<%= @item.price.to_s(:delimited) %>円)／<%= @item.capacity %>　発売日：<%= @item.release_date.strftime('%Y/%m/%d') %></p>
        <p class="mb-0">商品説明</p>
        <p><%= @item.introduction %></p>
      </div>
      <div>
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-dark btn-sm m-1" %>
        <%= link_to "削除する", admin_item_path(@item.id), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-dark btn-sm m-1" %>
      </div>
    </div>
  </div>
</div>